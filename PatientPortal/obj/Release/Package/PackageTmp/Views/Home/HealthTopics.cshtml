@{
    ViewBag.Title = "HealthTopics";    
}

<h2>Health Topics</h2>

@using (Html.BeginForm())
    {
   
         <input id="txtHealthTopicName" name="txtHealthTopicName" type="text" value="@ViewBag.HealthTopicName" class="input-block-level" placeholder="Health Topic. Ex: Asthma" style="width:50%;" /> 
    
         <input type="submit" class="btn btn-large btn-primary" value="Search" />
     }
<div id="resultDiv">     
   @Html.Raw(ViewBag.Result) 
</div>
